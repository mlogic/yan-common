# For configuration variable, 1 means yes, 0 means no.

# Identifier for logging into syslog. Need to be unique on this system
# because we also use it to prevent reentry.
LOG_IDENTIFIER=rsnapshot_encfs_mydataset
# Setting log destination for each log level. Available choices are
# syslog, stdout, and stderr. You are allowed to combine two
# destinations, such as LOG_INFO="syslog stdout".
LOG_DEBUG=syslog
LOG_INFO=syslog
LOG_WARNING=stdout
LOG_ERROR=stdout

CHECK_AC_POWER=1
CHECK_NETWORK_MANAGER_NETWORK=only_run_on_network_with_this_ssid
# Only run if we can ping this host
CHECK_PING_HOST=only_run_if_we_can_ping_this_host

# Location of encfs encrypted files
ENCFS=/amnt/g/rsnapshot/bellatrix/
ENCFS_PASSWORD=supply_your_very_secret_password_for_automount
RSNAPSHOT_CONF_FILE=/home/my/.config/rsnapshot.conf
# Only write a finish file for the "daily" task because other tasks
# don't actually backup files from bellatrix.
SYNC_FINISH_TIMESTAMP_FILE=/amnt/g/rsnapshot/rsnapshot_encfs_sync_last_finished.txt
DAILY_FINISH_TIMESTAMP_FILE=/amnt/g/rsnapshot/rsnapshot_encfs_daily_last_finished.txt
